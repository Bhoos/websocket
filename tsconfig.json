{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "target": "es2017",
    "lib": ["es2017", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "es6",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
